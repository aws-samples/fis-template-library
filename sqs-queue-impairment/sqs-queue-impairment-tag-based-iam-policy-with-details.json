{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowFISExperimentLogging",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogDelivery",
        "logs:PutResourcePolicy",
        "logs:DescribeResourcePolicies",
        "logs:DescribeLogGroups"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowSSMDocumentExecution",
      "Effect": "Allow",
      "Action": [
        "ssm:StartAutomationExecution",
        "ssm:GetAutomationExecution",
        "ssm:StopAutomationExecution"
      ],
      "Resource": [
        "arn:aws:ssm:us-west-2:974793076898:document/SqsQueueSimulateImpairment",
        "arn:aws:ssm:us-west-2:974793076898:automation-definition/SqsQueueSimulateImpairment:*",
        "arn:aws:ssm:us-west-2:974793076898:automation-execution/*"
      ]
    },
    {
      "Sid": "AllowSQSOperations",
      "Effect": "Allow",
      "Action": [
        "sqs:AddPermission",
        "sqs:RemovePermission",
        "sqs:ListQueues",
        "sqs:ListQueueTags"
      ],
      "Resource": "arn:aws:sqs:us-west-2:974793076898:*"
    }
  ]
}
