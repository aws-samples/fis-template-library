{
  "description": "Simulate ElastiCache Redis primary node reboot to test application resilience",
  "targets": {},
  "actions": {
    "triggerPrimaryNodeReboot": {
      "actionId": "aws:ssm:start-automation-execution",
      "description": "Reboot Redis primary node and monitor recovery",
      "parameters": {
        "maxDuration": "PT30M",
        "documentArn": "arn:aws:ssm:us-east-1:<YOUR-ACCOUNT-ID>:document/ElastiCache-Redis-Primary-Node-Reboot",
        "documentParameters": "{\"tagKey\": \"FIS-Ready\", \"tagValue\": \"True\", \"region\": \"us-east-1\", \"AutomationAssumeRole\": \"arn:aws:iam::<YOUR-ACCOUNT-ID>:role/ElastiCache-SSM-Automation-Role\"}"
      },
      "targets": {}
    }
  },
  "stopConditions": [
    {
      "source": "none"
    }
  ],
  "roleArn": "arn:aws:iam::<YOUR-ACCOUNT-ID>:role/ElastiCache-FIS-Role",
  "tags": {
    "Name": "ElastiCacheRedisPrimaryNodeRebootTest",
    "Purpose": "resilience-testing"
  },
  "experimentOptions": {
    "accountTargeting": "single-account",
    "emptyTargetResolutionMode": "skip"
  }
}
