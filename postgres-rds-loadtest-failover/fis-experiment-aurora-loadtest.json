{
  "description": "Aurora PostgreSQL Load Test and Failover Experiment",
  "targets": {
    "cluster": {
      "resourceType": "aws:rds:cluster",
      "resourceArns": [],
      "selectionMode": "ALL"
    },
    "EC2Instance": {
      "resourceType": "aws:ec2:instance",
      "resourceArns": [],
      "selectionMode": "ALL"
    }
  },
  "actions": {
    "RunLoadTest": {
      "actionId": "aws:ssm:send-command",
      "parameters": {
        "documentArn": "${SSMDocumentArn}",
        "documentParameters": "{\"Duration\":\"300\",\"Concurrency\":\"10\"}",
        "duration": "PT10M"
      },
      "targets": {
        "Instances": "EC2Instance"
      }
    },
    "failover": {
      "actionId": "aws:rds:failover-db-cluster",
      "parameters": {},
      "targets": {
        "Clusters": "cluster"
      },
      "startAfter": ["RunLoadTest"]
    }
  },
  "stopConditions": [
    {
      "source": "none"
    }
  ],
  "roleArn": "",
  "tags": {
    "Name": "Aurora-PostgreSQL-LoadTest-Failover"
  },
  "logConfiguration": {
    "logSchemaVersion": 2,
    "cloudWatchLogsConfiguration": {
      "logGroupArn": ""
    }
  }
}
